<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #202020;" type="BorderPane" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <Label fx:id="statusLabel" alignment="CENTER" maxWidth="1.7976931348623157E308" style="-fx-font-weight: bold; -fx-font-size: 17; -fx-text-fill: white;" text="Status : [ Stopped ]" BorderPane.alignment="CENTER" />
   </top>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
   <bottom>
      <VBox alignment="TOP_CENTER" prefHeight="300.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <TextArea fx:id="infoArea" prefHeight="300.0" prefWidth="600.0" promptText="..information area" />
            <TextArea fx:id="desc" editable="false" prefHeight="150.0" prefWidth="600.0" />
         </children>
      </VBox>
   </bottom>
   <right>
      <HBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="10.0" BorderPane.alignment="CENTER">
      <children>
                        <ImageView fx:id="img1" fitHeight="128.0" fitWidth="128.0" pickOnBounds="true" preserveRatio="true" />
                    </children>
         <children>
            <Button fx:id="start" mnemonicParsing="false" text="Start">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="pause" mnemonicParsing="false" text="pause">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="resume" mnemonicParsing="false" text="resume">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <ImageView fitHeight="90.0" fitWidth="500.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../image/stt1.png" />
               </image>
            </ImageView>
         </children>
      </HBox>
   </right>
</fx:root>
